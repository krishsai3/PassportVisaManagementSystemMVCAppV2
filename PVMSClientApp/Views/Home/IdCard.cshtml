@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0 auto;
            display: flex;
            align-content: center;
            justify-content: center;
        }

        .container {
            background: url('../../images/passportBg1.jpg') no-repeat;
            background-size: contain;
            margin: 0 auto;
            padding:20px;
            box-shadow: 0px 0px 0px rgba(0, 0, 0, 0.1);
        }

        .passport-photo img {
            height: 130px;
            vertical-align: top;
        }

        .info {
            display: inline-block;
            margin: 20px;
        }

        .passport-photo {
            display: inline-block;
            margin: 20px;
        }

        .passport-data {
            display: flex;
            align-content: center;
            justify-content: flex-start;
        }

        .info-title {
            display: inline-block;
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <p><strong>भारत गणराज्य</strong></p>
        <p><strong>REPUBLIC OF INDIA</strong></p>   
        <div class="passport-data">
            <div class="info">
                <h3 class="info-title">Personal Information</h3>
                <p><strong>Type</strong></p>
                <p><strong>Country Code</strong></p>
                <p><strong>Passport No:</strong></p>
                <p><strong>Surname</strong></p>
                <p><strong>Given Name(s):</strong></p>

                <p><strong>Nationality:</strong></p>
                <p><strong>Date of Birth:</strong></p>
                <p><strong>Place of Birth:</strong></p>
                <p><strong>Date of Issue:</strong></p>
                <p><strong>Date of Expiry:</strong></p>


            </div>
            <div class="passport-photo">
                <img src="~/Images/ae.jpg" alt="Passport Photo" />
            </div>
        </div>
    </div>

    <script>

    </script>
</body>
</html>
